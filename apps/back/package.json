{
  "name": "@ajustor/civ-api",
  "version": "0.0.1",
  "type": "module",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --minify --target=bun --outdir=dist",
    "start": "NODE_ENV=production bun src/index.ts",
    "generate:migrations": "bunx drizzle-kit generate",
    "migration": "bun run migrations.ts",
    "populate": "bun run seed.ts",
    "email:preview": "email -dir src/emailTemplates"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@ajustor/simulation": "1.0.0",
    "@libsql/client": "^0.10.0"
  }
}